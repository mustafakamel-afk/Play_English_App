<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/alert_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/frame_blue"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:isIndicator="true"
            android:numStars="3"
            android:progressBackgroundTint="#a0bac6"
            android:progressTint="@color/yellow"
            android:rating="0"
            android:secondaryProgressTint="#c4870e"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/add_new_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/ic_coin"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:text="0+"
            android:textColor="@color/yellow"
            android:textDirection="anyRtl"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/ic_coin"
            android:drawablePadding="4dp"
            android:fontFamily="serif"
            android:text="0"
            android:textColor="@color/yellow"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/free_score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:background="@drawable/background_blue_1"
            android:drawableLeft="@drawable/ic_coin_white"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/video_ic"
            android:fontFamily="serif"
            android:padding="16dp"
            android:text="5+  "
            android:textColor="@android:color/white"
            android:textDirection="anyRtl"
            android:textSize="32sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/show_levels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/next_blue_ic" />
    </LinearLayout>
</RelativeLayout>